
{% macro print_state(registration) %}
    {% if is_granted("ROLE_PRIVILEGED") %}
        {% if registration.state == 'SUBMITTED' %}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        {% elseif registration.state == 'WAITING' %}
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        {% elseif registration.state == 'VALIDATED' %}
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
        {% elseif registration.state == 'PAID' %}
            <span class="glyphicon glyphicon-euro" aria-hidden="true"></span>
        {% elseif registration.state == 'CANCELLED' %}
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        {% endif %}
        {% if registration.withPartner %}
            <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
        {% endif %}
    {% endif %}
{% endmacro %}
