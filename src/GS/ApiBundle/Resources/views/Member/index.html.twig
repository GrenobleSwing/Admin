{% extends "GSApiBundle::layout.html.twig" %}

{% block gs_body %}
    {{ parent() }}

    <h2>Liste des membres
        {% if onlyPaid %}
            (uniquement ceux ayant payé)
        {% else %}
            (y compris ceux n'ayant pas encore payé)
        {% endif %}
    </h2>

    <p>
        {% if onlyPaid %}
            <a href="{{ path('index_member', {'id': year.id, 'all': true}) }}" class="btn btn-default">
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                Inclure ceux n'ayant pas encore payé
            </a>
        {% else %}
            <a href="{{ path('index_member', {'id': year.id}) }}" class="btn btn-default">
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                Seulement ceux ayant payé
            </a>
        {% endif %}
    </p>

    <table id="gs_table" class="table table-striped table-hover display nowrap" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
            </tr>
        <thead>
        <tfoot>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
            </tr>
        </tfoot>
    </table>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).ready(function () {
            // Setup - add a text input to each footer cell
            $('#gs_table tfoot th').each(function () {
                var title = $(this).text();
                $(this).html('<input type="text" placeholder="Search ' + title + '" />');
            });

            // DataTable
            var table = $('#gs_table').DataTable({
                "dom": 'Blfrtip',
                "scrollX": true,
                "ajax": {
                    "url": "{{ path('index_member_json', {'id': year.id, 'onlyPaid': onlyPaid}) }}",
                    "dataSrc": ''
                },
                "columns": [
                    { "data": 'firstName' },
                    { "data": 'lastName' },
                    { "data": 'email' }
                ],
                "buttons": [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });

            // Apply the search
            table.columns().every(function () {
                var that = this;

                $('input', this.footer()).on('keyup change', function () {
                    if (that.search() !== this.value) {
                        that
                            .search(this.value)
                            .draw();
                    }
                });
            });

        });
    </script>
{% endblock %}
