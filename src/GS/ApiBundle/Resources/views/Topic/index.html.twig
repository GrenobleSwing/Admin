{% extends "GSApiBundle::layout.html.twig" %}

{% block gs_body %}
    {{ parent() }}

    <h2>Liste des cours/niveaux</h2>

    {% import "GSApiBundle:Topic:macros.html.twig" as macro %}
    <ul>
        {% for topic in listTopics %}
            <li>
                <a href="{{ path('view_topic', {'id': topic.id}) }}">
                    {{ macro.print_title(topic) }}
                </a>
            </li>
        {% else %}
            <li>Pas (encore !) de cours/niveaux</li>
        {% endfor %}
    </ul>

{% endblock %}
