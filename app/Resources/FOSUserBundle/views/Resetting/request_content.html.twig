{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST"  ng-submit="processForm($event, 'POST', '{{ path('fos_user_resetting_send_email') }}')" class="fos_user_resetting_request">
    <div class="form-group">
        <label class="control-label required" for="username">{{ 'resetting.request.username'|trans }}</label>
        <input class="form-control" type="text" id="username" name="username" required="required" />
    </div>
    <div class="form-group">
        <input class="btn-default btn" type="submit" value="{{ 'resetting.request.submit'|trans }}" />
    </div>
</form>
